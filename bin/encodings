#!/usr/bin/env ruby
# frozen_string_literal: true

def table(range, encoding)
  puts "//#{(0...16).map { |value| value.to_s(16).upcase }.join("  ")}"

  range.each_slice(16).with_index do |slice, row_index|
    row =
      slice.map do |codepoint|
        character = codepoint.chr(encoding)

        value = 0
        value |= (1 << 0) if character.match?(/[[:alpha:]]/)
        value |= (1 << 1) if character.match?(/[[:alnum:]]/)
        value |= (1 << 2) if character.match?(/[[:upper:]]/)

        "%d," % value
      end

    puts "#{row.join(" ")} // #{row_index.to_s(16).upcase}x"
  end
end

def lists(name, range, encoding)
  range = range.map { begin; _1.chr(encoding); _1; rescue RangeError; nil; end }.compact

  { alpha: /[[:alpha:]]/, alnum: /[[:alnum:]]/, isupper: /[[:upper:]]/ }.map do |kind, regex|
    codepoints = range.select { _1.chr(encoding).match?(regex) }

    previous = nil
    groups =
      codepoints.slice_before do |codepoint|
        (!previous.nil? && (codepoint - previous) != 1).tap { previous = codepoint }
      end

    matched =
      groups.flat_map do |group|
        ["0x#{group.first.to_s(16).upcase}", "0x#{group.last.to_s(16).upcase}"]
      end

    puts "\n#define #{name.upcase}_#{kind.upcase}_CODEPOINTS_LENGTH #{matched.length}"
    puts "#{name}_codepoint_t #{name}_#{kind}_codepoints[#{name.upcase}_#{kind.upcase}_CODEPOINTS_LENGTH] = {"
    matched.each_slice(2) { |slice| puts "  #{slice.join(", ")}," }
    puts "};"
  end
end

case ARGV[0]
when "ascii"        then table(0...256, Encoding::ASCII_8BIT)
when "big5"         then lists("big5", 0...65536, Encoding::Big5)
when "euc-jp"       then lists("euc-jp", 0...0x10000, Encoding::EUC_JP)
when "iso-8859-1"   then table(0...256, Encoding::ISO8859_1)
when "iso-8859-10"  then table(0...256, Encoding::ISO8859_10)
when "iso-8859-11"  then table(0...256, Encoding::ISO8859_11)
when "iso-8859-13"  then table(0...256, Encoding::ISO8859_13)
when "iso-8859-14"  then table(0...256, Encoding::ISO8859_14)
when "iso-8859-15"  then table(0...256, Encoding::ISO8859_15)
when "iso-8859-16"  then table(0...256, Encoding::ISO8859_16)
when "iso-8859-2"   then table(0...256, Encoding::ISO8859_2)
when "iso-8859-3"   then table(0...256, Encoding::ISO8859_3)
when "iso-8859-4"   then table(0...256, Encoding::ISO8859_4)
when "iso-8859-5"   then table(0...256, Encoding::ISO8859_5)
when "iso-8859-6"   then table(0...256, Encoding::ISO8859_6)
when "iso-8859-7"   then table(0...256, Encoding::ISO8859_7)
when "iso-8859-8"   then table(0...256, Encoding::ISO8859_8)
when "iso-8859-9"   then table(0...256, Encoding::ISO8859_9)
when "shift_jis"    then lists("shift_jis", 0...0x10000, Encoding::Shift_JIS)
when "utf8"         then lists("utf8", 0...0x110000, Encoding::UTF_8)
when "windows-1251" then table(0...256, Encoding::Windows_1251)
when "windows-1252" then table(0...256, Encoding::Windows_1252)
when "windows-31j"  then lists("windows-31j", 0...0x10000, Encoding::Windows_31)
else raise "Unknown encoding `#{ARGV[0]}'"
end
